@model IEnumerable<WebApplication.Models.OffreViewModel>

@{
    ViewBag.Title = "Index";
}


<h2>Liste des offres</h2>

@if(Model.Count() <= 0)
{
    <p>Il n'y a aucune offre.</p>
}
else
{
    <form asp-controller="Offres" asp-action="SubmitFilter" method="post" class="mb-3">
        <div class="input-group">
            <input type="text" name="SearchString" class="form-control" placeholder="Search..." />
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>

 
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Statut)</th>
                <th>@Html.DisplayNameFor(model => model.Intitule)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>@Html.DisplayNameFor(model => model.Salaire)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Responsable)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Statut.Libelle)</td>
                    <td>@Html.DisplayFor(modelItem => item.Intitule)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Salaire)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Responsable)</td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

