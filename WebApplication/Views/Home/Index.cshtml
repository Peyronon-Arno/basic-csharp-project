@model WebApplication.Models.EmployeHomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Vos informations</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Date de naissance</th>
                        <th>Ancienneté</th>
                        <th>Biographie</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Nom)</td>
                        <td>@Html.DisplayFor(model => model.Prenom)</td>
                        <td>@Html.DisplayFor(model => model.DateNaissance)</td>
                        <td>@Html.DisplayFor(model => model.Anciennete)</td>
                        <td>@Html.DisplayFor(model => model.Biographie)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h1>Vos postulations</h1>
            @foreach (var item in Model.Postulations)
            {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@item.Offre.Intitule</h5>
                    <p class="card-text">Date : @item.Offre.Date.ToString("dd/MM/yyyy")</p>
                    <p class="card-text">Description : @item.Offre.Description</p>
                    <p class="card-text">Responsable : @item.Offre.Responsable</p>
                </div>
            </div>
            }
        </div>
    </div>
</div>